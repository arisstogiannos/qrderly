// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum UserRole {
  ADMIN
  USER
}

enum BillingType {
  MONTHLY
  YEARLY
  FREETRIAL
}

enum Template {
  T1
  T2
}

enum TokenType {
  VALIDATION
  RESET_PASSWORD
}

enum OrderStatus {
  PENDING
  COMPLETED
  INVIEW
}

enum Product {
  QR_MENU
  SMART_QR_MENU
  SELF_SERVICE_QR_MENU
}

model Banner {
  id         String   @id @default(uuid())
  text       String
  targetTime DateTime
}

model User {
  id            String     @id @default(uuid())
  name          String
  email         String     @unique
  image         String?
  role          UserRole   @default(ADMIN)
  emailVerified DateTime?  @map("email_verified")
  business      Business[]
  password      String?
  // settings   Settings?

  accounts      Account[]
  subscriptions Subscription[]
}

model Business {
  id           String        @id @default(uuid())
  name         String        @unique
  type         String
  location     String
  userId       String
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  menu         Menu?
  orders       Order[]
  qr           QR?
  subscription Subscription?
  product      Product       @default(QR_MENU)
  tables       String?
  currency     String        @default("EUR")
  // Settings Settings[]
}

model Subscription {
  id          String      @id @default(uuid())
  product     Product
  businessId  String?     @unique
  business    Business?   @relation(fields: [businessId], references: [id], onDelete: Cascade)
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  stripeSubId String?     @unique
  billing     BillingType
  hasExpired  Boolean     @default(false)
  purchasedAt DateTime    @default(now())
  renewedAt   DateTime    @updatedAt
  expiresAt   DateTime?

  @@unique([businessId, product])
}

model Menu {
  id         String     @id @default(uuid())
  businessId String     @unique
  business   Business   @relation(fields: [businessId], references: [id], onDelete: Cascade)
  menuItems  MenuItem[]
  theme      String
  languages  String
  noScans    Int        @default(0)
  categories Category[]
  published  Boolean    @default(false)
  type       Product    @default(QR_MENU)
  template   Template   @default(T1)
  // qrs        QR[]
}

model QR {
  id         String    @id @default(uuid())
  businessId String?   @unique
  business   Business? @relation(fields: [businessId], references: [id], onDelete: Cascade)
  // menuId     String
  // menu       Menu     @relation(fields: [menuId], references: [id])
  link       String
  qrOptions  String    @default("")
  text       String    @default("")
}

model Order {
  id         String      @id @default(uuid())
  businessId String
  business   Business    @relation(fields: [businessId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]
  price      Float
  table      String
  status     OrderStatus

  createdAt   DateTime  @default(now())
  completedAt DateTime?
}

model OrderItem {
  id          String   @id @default(uuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItemId  String
  menuItem    MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  quantity    Int
  preferences String
  price       Int
}

model MenuItem {
  id           String      @id @default(uuid())
  menuId       String
  menu         Menu        @relation(fields: [menuId], references: [id], onDelete: Cascade)
  orderItems   OrderItem[]
  name         String
  description  String?
  preferences  String?
  priceInCents Int
  categoryId   String
  category     Category    @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  isAvailable  Boolean     @default(true)
  imagePath    String?
  stock        Int?
  translations String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id           String   @id @default(uuid())
  name         String
  description  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  menuId       String
  menu         Menu     @relation(fields: [menuId], references: [id], onDelete: Cascade)
  translations String?

  menuItems MenuItem[]
}

model Token {
  id        String    @id @default(uuid())
  email     String
  token     String
  type      TokenType
  password  String?
  expiresAt DateTime
  createdAt DateTime  @default(now())

  @@unique([email, token])
}

